/* animations modernes */
@keyframes bumper-pop-in{
  to{ opacity:1; transform: translateY(0) scale(1); }
}

@keyframes bumper-pop-out{
  from{ opacity:1; transform: translateY(0) scale(1); }
  to{ opacity:0; transform: translateY(-12px) scale(1.03); }
}

@keyframes logo-reveal{
  0%{ opacity:0; transform: translateY(12px) scale(.9); filter: blur(8px) drop-shadow(0 0 0 rgba(0,0,0,0)); }
  60%{ opacity:1; filter: blur(0) drop-shadow(0 18px 42px rgba(0,0,0,0.28)); }
  100%{ opacity:1; transform: translateY(0) scale(1); filter: blur(0) drop-shadow(0 18px 42px rgba(0,0,0,0.28)); }
}

@keyframes logo-pulse{
  0%,100%{ transform: translateY(0) scale(1); }
  50%{ transform: translateY(-2px) scale(1.015); }
}

@keyframes tagline-in{
  to{ opacity:1; transform: translateY(0); }
}
