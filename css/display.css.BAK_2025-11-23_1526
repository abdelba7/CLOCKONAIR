   BUMPER MODERNE + OPAQUE
   ======================= */

.bumper-overlay{
  position: fixed;
  inset: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;

  /* 100% opaque : aucune transparence */
  background:
    radial-gradient(1200px circle at 50% 45%, #ffffff 0%, #f0f4ff 35%, #e9f0ff 65%, #dbe6ff 100%);
  opacity: 0;
  pointer-events: none;
  transition: opacity .25s ease;
}

body.theme-dark .bumper-overlay{
  background:
    radial-gradient(1200px circle at 50% 45%, #0a0e1e 0%, #070a16 45%, #050814 100%);
}

.bumper-overlay.show{
  opacity: 1;
  pointer-events: auto;
}

.bumper-content{
  display:flex;
  flex-direction:column;
  align-items:center;
  gap:14px;

  opacity: 0;
  transform: translateY(18px) scale(.94);
  animation: bumper-pop-in .7s cubic-bezier(.2,.9,.25,1) forwards;
}

.bumper-overlay.show .bumper-content{
  animation:
    bumper-pop-in .7s cubic-bezier(.2,.9,.25,1) forwards,
    bumper-pop-out .7s cubic-bezier(.7,0,.2,1) forwards;
  animation-delay: 0s, var(--bumper-exit-delay, 5.4s);
}

/* logo : modern reveal */
.bumper-logo{
  width: min(62vw, 560px);
  height: auto;
  display: block !important;
